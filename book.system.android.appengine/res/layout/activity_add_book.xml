<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.book.system.android.appengine.AddBookActivity"
    tools:ignore="MergeRootFrame">
  

      
     
    <TextView
        android:id="@+id/SearchTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="ISBN"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:fontFamily="roboto-light"
        android:textColor="#6A6A6A"  />

    <EditText
        android:id="@+id/EditText_ISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SearchTest"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="text"
        android:textColor="#00A3CC" />

    <EditText
        android:id="@+id/EditText_BookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/EditText_ISBN"
        android:layout_below="@+id/TextEdit_BookTitle"
        android:ems="10" 
        android:inputType="text"
        android:textColor="#00A3CC"/>

	
    <EditText
        android:id="@+id/EditText_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_static"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="number"
        android:textColor="#00A3CC" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button_AddBook"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditText_Price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Add"
        android:fontFamily="roboto-light"
        android:background="#00A3CC"
        android:textColor="#FFFFFF"  />

    <TextView
        android:id="@+id/TextEdit_BookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditText_ISBN"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Book Title"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:fontFamily="roboto-light"
        android:textColor="#6A6A6A" />

    <TextView
        android:id="@+id/price_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SearchTest"
        android:layout_below="@+id/EditText_BookTitle"
        android:layout_marginTop="25dp"
        android:text="Price"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:fontFamily="roboto-light"
        android:textColor="#6A6A6A"  />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_AddBook"
        android:layout_alignTop="@+id/TextEdit_Price"
        android:layout_weight="0.5" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.45" >

        </LinearLayout>
    </LinearLayout>

   

</RelativeLayout>
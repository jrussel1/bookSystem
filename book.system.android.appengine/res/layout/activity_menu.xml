<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.book.system.android.appengine.MenuActivity"
    tools:ignore="MergeRootFrame" 
    android:theme="@android:style/Theme.NoTitleBar"
    android:background="@drawable/grey">

    <EditText
        android:id="@+id/EditText_Author"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="206dp"
        android:alpha="0.7"
        android:background="@drawable/rect_text_edit"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button_item_seller"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/EditText_Author"
        android:layout_below="@+id/EditText_Author"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="35dp"
        android:text="Search"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button_item_seller"
        android:layout_alignBottom="@+id/button_item_seller"
        android:layout_alignRight="@+id/EditText_Author"
        android:layout_marginRight="26dp"
        android:text="Sell"
        android:textColor="#FFFFFF" />

</RelativeLayout>


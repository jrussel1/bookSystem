<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.book.system.android.appengine.MyProfileActivity"
    tools:ignore="MergeRootFrame" >

                <TextView
                    android:id="@+id/myinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:padding="10dip"
                    android:text="My Info\n"
                    android:textSize="30dip" />
                

                <TextView
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:padding="15dip"
                    android:text="Name: \nE-mail: \nPhone Number: "
                    android:textSize="18dip" />
                
                <TextView
                    android:id="@+id/mybooks"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:padding="10dip"
                    android:text="My Books\n"
                    android:textSize="30dip" />
                
                 <Button
        			android:id="@+id/addButton"
        			android:layout_width="100dp"
        			android:layout_height="wrap_content"
        			android:layout_alignParentBottom="true"
        			android:layout_centerHorizontal="true"
        			android:layout_marginBottom="40dp"
        			android:background="#167ABC"
        			android:fontFamily="roboto-light"
        			android:text="Add"
        			android:textColor="#FFFFFF" />
        
</LinearLayout>
